<% @rating_types = RatingType.all %>

<% if @issue.status.name == 'Closed' %>
  <div class="slidecontainer">

    <%= hidden_field_tag 'issue[language]', I18nData.languages["#{I18n.locale.upcase}"] %>


    <% @rating_types.each do |rt| %>
      <p>
        <% rating = Rating.find_by(type_id: rt.id, issue_id: @issue.id) %>

        <label><%= rt.value %></label>
        <%= range_field_tag "issue[rating_#{rt.value}]", value = rating.try(:value), in: 1..10, step: 1 %>
      </p>
    <% end %>
  </div>
<% end %>
